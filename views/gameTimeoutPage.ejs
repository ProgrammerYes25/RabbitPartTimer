<!DOCTYPE html>

<head>
    <link rel="stylesheet" type="text/css" href="css/gameTimeoutPage.css">
    <!-- <script src="../js/index.js"></script> -->
    <title>알바토끼</title>
    <script>
        function onclickSound(link) {
            const clickMusic = document.getElementById("clickSound");
            clickMusic.play();

            // 소리 재생 후 링크로 이동
            setTimeout(function () {
                window.location.href = link;
            }, clickMusic.duration * 670); // 소리의 재생 시간(초)에 따라 지연 시간 설정
        }
    </script>
</head>
<body>
    <div class=".img_table">
        <table>

        </table>
        <hr>
        <table>
            <%i = 0%>
            <% datalist.forEach(function (item, index) { %>
                <% i++%>
                
                <% if(index< 5){ %>
                    <tr>
                        <td> <%= item.userName %> </td>
                        <td> <%= item.userScore %> </td>
                    </tr>
                <% }%>
                   
            <%});%>
        </table>
    </div>

    <img class="game_btn" src="image/img_btn_game_start.png" alt="game_btn"
        onclick="onclickSound('/gameNameEnterPage')" />

    <img class="rule_btn" src="image/img_btn_game_rules.png" alt="rule_btn"
        onclick="onclickSound('/gameManualPage')" />

    <audio id="clickSound">
        <source src="./music/button_click.mp3" type="audio/mp3">
    </audio>

</body>

</html>